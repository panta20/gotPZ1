<Window x:Class="Game_of_thrones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_thrones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="got3.jpg" Opacity="1" />
    </Window.Background>
    <Grid>
        <DataGrid x:Name="dataGridNews" ItemsSource="{Binding Likovi}" IsReadOnly="True"  HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Opacity="0.6" Width="236" Margin="156,0,0,0" RenderTransformOrigin="-0.215,0.494"/>
        <Button x:Name="buttonAdd"  Content="Dodaj lika" Opacity="1" Background="LightGoldenrodYellow" HorizontalAlignment="Left" Height="27" Margin="92,0,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.571,-0.28"/>
        <Button x:Name="buttonExit" Content="Izađi" Opacity="1" Background="LightGoldenrodYellow" HorizontalAlignment="Left" VerticalAlignment="Top" Width="55" Margin="392,390,0,0" Height="30"/>

    </Grid>
</Window>
